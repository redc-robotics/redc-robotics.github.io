<div class="container">
  <div class="show-head">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <% if @user.member %>
      <h6>Member of the redC Team</h6>
      <% if @user.role %>
        <h6><%= @user.role %></h6>
      <% end %>
    <% end %>
  </div>

  <div class="info">
    <h3>Information</h3>
    <p><b>Email:</b> <%= @user.email %></p>
  </div>
</div>
